<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Habit #<%= @habit.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/habits" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_habit/<%= @habit.id %>" class="btn btn-block btn-outline-secondary">
          Delete habit
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @habit.name %>
      </dd>

      <dt>
        Time of day
      </dt>
      <dd>
        <%= @habit.time_of_day %>
      </dd>

      <dt>
        First day
      </dt>
      <dd>
        <%= @habit.first_day %>
      </dd>

      <dt>
        Checkin count
      </dt>
      <dd>
        <%= @habit.checkin_count %>
      </dd>

      <dt>
        Checkin today
      </dt>
      <dd>
        <%= @habit.checkin_today %>
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <%= @habit.owner_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@habit.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@habit.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

Checkins
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
        </th>

      <% @habit.habit_checkins.each do |check| %>
      <tr>
        <td>
          <%= check.associated_habit.name %>
        </td>

        <td>
          <%= check.created_at %>
        </td>

        <td>
          <a href="/delete_checkin/<%= @habit.id %>/<%= check.id %>" class="btn btn-warning">Delete</a>
        </td>

      <% end %>
    </table>
  </div>
</div>
<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit habit
    </h2>

    <form action="/modify_habit/<%= @habit.id %>"  method="post" >
      <div class="form-group">
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" class="form-control" value="<%= @habit.name %>">
      </div>

      <div class="form-group">
        <label for="time_of_day_box">
          Time of day
        </label>

        <input type="time" id="time_of_day_box" name="query_time_of_day" class="form-control" value="<%= @habit.time_of_day %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update habit
      </button>
    </form>
  </div>
</div>

<hr>
